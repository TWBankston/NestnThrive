{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
        "color": {
            "custom": true,
            "customDuotone": false,
            "customGradient": true,
            "defaultDuotone": false,
            "defaultGradients": false,
            "defaultPalette": false,
            "palette": [
                {
                    "color": "#1C1917",
                    "name": "Stone 900",
                    "slug": "stone-900"
                },
                {
                    "color": "#292524",
                    "name": "Stone 800",
                    "slug": "stone-800"
                },
                {
                    "color": "#44403C",
                    "name": "Stone 700",
                    "slug": "stone-700"
                },
                {
                    "color": "#57534E",
                    "name": "Stone 600",
                    "slug": "stone-600"
                },
                {
                    "color": "#78716C",
                    "name": "Stone 500",
                    "slug": "stone-500"
                },
                {
                    "color": "#A8A29E",
                    "name": "Stone 400",
                    "slug": "stone-400"
                },
                {
                    "color": "#D6D3D1",
                    "name": "Stone 300",
                    "slug": "stone-300"
                },
                {
                    "color": "#E7E5E4",
                    "name": "Stone 200",
                    "slug": "stone-200"
                },
                {
                    "color": "#F5F5F4",
                    "name": "Stone 100",
                    "slug": "stone-100"
                },
                {
                    "color": "#FAFAF9",
                    "name": "Stone 50",
                    "slug": "stone-50"
                },
                {
                    "color": "#FFFFFF",
                    "name": "White",
                    "slug": "white"
                },
                {
                    "color": "#3F4A3C",
                    "name": "Forest",
                    "slug": "forest"
                },
                {
                    "color": "#2C332A",
                    "name": "Forest Dark",
                    "slug": "forest-dark"
                },
                {
                    "color": "#EAB308",
                    "name": "Gold Star",
                    "slug": "gold-star"
                },
                {
                    "color": "#DCFCE7",
                    "name": "Green 100",
                    "slug": "green-100"
                },
                {
                    "color": "#166534",
                    "name": "Green 800",
                    "slug": "green-800"
                },
                {
                    "color": "#FEE2E2",
                    "name": "Red 50",
                    "slug": "red-50"
                },
                {
                    "color": "#F87171",
                    "name": "Red 400",
                    "slug": "red-400"
                }
            ]
        },
        "layout": {
            "contentSize": "768px",
            "wideSize": "1280px"
        },
        "spacing": {
            "padding": true,
            "margin": true,
            "blockGap": true,
            "units": ["px", "em", "rem", "%", "vh", "vw"]
        },
        "typography": {
            "customFontSize": true,
            "dropCap": false,
            "fluid": true,
            "fontFamilies": [
                {
                    "fontFamily": "'Instrument Serif', Georgia, 'Times New Roman', serif",
                    "name": "Heading",
                    "slug": "heading"
                },
                {
                    "fontFamily": "'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif",
                    "name": "Body",
                    "slug": "body"
                }
            ],
            "fontSizes": [
                {
                    "name": "Extra Small",
                    "size": "0.625rem",
                    "slug": "xs"
                },
                {
                    "name": "Small",
                    "size": "0.875rem",
                    "slug": "small"
                },
                {
                    "name": "Medium",
                    "size": "1rem",
                    "slug": "medium"
                },
                {
                    "name": "Large",
                    "size": "1.125rem",
                    "slug": "large"
                },
                {
                    "name": "X-Large",
                    "size": "1.25rem",
                    "slug": "x-large"
                },
                {
                    "name": "2X-Large",
                    "size": "1.5rem",
                    "slug": "2xl"
                },
                {
                    "name": "3X-Large",
                    "size": "1.875rem",
                    "slug": "3xl"
                },
                {
                    "name": "4X-Large",
                    "size": "2.25rem",
                    "slug": "4xl"
                },
                {
                    "name": "5X-Large",
                    "size": "3rem",
                    "slug": "5xl"
                },
                {
                    "name": "6X-Large",
                    "size": "3.75rem",
                    "slug": "6xl"
                },
                {
                    "name": "7X-Large",
                    "size": "4.5rem",
                    "slug": "7xl"
                }
            ],
            "lineHeight": true
        },
        "useRootPaddingAwareAlignments": true
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--stone-50)",
            "text": "var(--wp--preset--color--stone-900)"
        },
        "elements": {
            "button": {
                "border": {
                    "radius": "9999px"
                },
                "color": {
                    "background": "var(--wp--preset--color--stone-900)",
                    "text": "var(--wp--preset--color--white)"
                },
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--forest)"
                    }
                },
                ":focus": {
                    "color": {
                        "background": "var(--wp--preset--color--forest)"
                    }
                }
            },
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontWeight": "500",
                    "letterSpacing": "-0.025em"
                },
                "color": {
                    "text": "var(--wp--preset--color--stone-900)"
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontWeight": "400"
                },
                "color": {
                    "text": "var(--wp--preset--color--stone-900)"
                }
            },
            "h3": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontWeight": "400"
                },
                "color": {
                    "text": "var(--wp--preset--color--stone-900)"
                }
            },
            "h4": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontWeight": "400"
                },
                "color": {
                    "text": "var(--wp--preset--color--stone-900)"
                }
            },
            "h5": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontWeight": "400"
                }
            },
            "h6": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--heading)",
                    "fontWeight": "400"
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--forest)"
                },
                ":hover": {
                    "color": {
                        "text": "var(--wp--preset--color--stone-900)"
                    }
                }
            }
        },
        "spacing": {
            "blockGap": "1.5rem",
            "padding": {
                "top": "0",
                "right": "1.5rem",
                "bottom": "0",
                "left": "1.5rem"
            }
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--body)",
            "fontSize": "var(--wp--preset--font-size--medium)",
            "lineHeight": "1.6"
        }
    },
    "templateParts": [
        {
            "area": "header",
            "name": "header",
            "title": "Header"
        },
        {
            "area": "footer",
            "name": "footer",
            "title": "Footer"
        }
    ]
}
